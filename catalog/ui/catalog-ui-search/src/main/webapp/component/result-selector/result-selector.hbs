                <div class="resultSelector-resultTitle">
                <span>
                    {{metacard.properties.title}}
                </span>
                </div>
                <div class="resultSelector-resultSource">
                <span>
                    {{metacard.properties.source-id}}
                </span>
                </div>
                <div class="resultSelector-resultLastModified">
                <span>
                    {{metacard.properties.modified}}
                </span>
                </div>
            </div>
