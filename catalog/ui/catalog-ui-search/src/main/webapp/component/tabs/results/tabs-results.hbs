<div class="tabs-list">
    <div class="tabs-expanded">
        {{#each tabs}}
            {{#unless this.filter}}
            <div class="tabs-tab is-button" data-id="{{@key}}">
                {{#if this.color}}
                    <span class="results-tabs-tab" style="background: {{this.color}}" title="{{this.tooltip}}">
                    </span>
                {{else}}
                    {{@key}}
                {{/if}}
            </div>
            {{/unless}}
        {{/each}}
        <div class="tabs-dropdown is-button">
            {{#each tabs}}
                {{#unless this.filter}}
                <span class="results-tabs-tab tabs-title" data-id="{{@key}}" style="background: {{this.color}}" data-popover-title="{{this.tooltip}}">
                    {{#unless this.color}}
                        {{@key}}
                    {{/unless}}
                </span>
                {{/unless}}
            {{/each}}
            <span class="hint">More</span>
            <span class="fa fa-bars"></span>
        </div>
    </div>
    <div class="tabs-collapsed">
        {{#each tabs}}
            {{#unless this.filter}}
            <div class="is-button" data-id="{{@key}}"">
                <span class="results-tabs-tab" style="background: {{this.color}}" title="{{this.tooltip}}">
                    {{#unless this.color}}
                        {{@key}}
                    {{/unless}}
                </span>
            </div>
            {{/unless}}
        {{/each}}
    </div>
</div>
<div class="tabs-content">

</div>
