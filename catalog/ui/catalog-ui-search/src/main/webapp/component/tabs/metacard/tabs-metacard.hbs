<div class="metacard-actions">
    <button class="metacard-action metacard-save">
        <div class="fa fa-star-o action-icon">
        </div>
        <div class="action-text"> Save</div>
    </button>
    <button class="metacard-action metacard-hide">
        <div class="fa fa-ban action-icon">
        </div>
        <div class="action-text"> Hide</div>
    </button>
    <button class="metacard-action metacard-share">
        <div class="fa fa-share action-icon">
        </div>
        <div class="action-text"> Share</div>
    </button>
    <button class="metacard-action metacard-expand">
        <div class="fa fa-expand action-icon">
        </div>
        <div class="action-text"> Expand</div>
    </button>
    <button class="metacard-action metacard-download">
        <div class="fa fa-download action-icon">
        </div>
        <div class="action-text"> Download</div>
    </button>
</div>
<div class="tabs-list">
    <div class="tabs-expanded">
        {{#each tabTitles}}
            <div class="tabs-tab is-button" data-id="{{this}}">
                {{this}}
            </div>
        {{/each}}
        <div class="tabs-dropdown is-button">
            {{#each tabTitles}}
                <span class="tabs-title" data-id="{{this}}">{{this}}</span>
            {{/each}}
            <span class="hint">More</span>
            <span class="fa fa-chevron-down"></span>
        </div>
    </div>
    <div class="tabs-collapsed">
        {{#each tabTitles}}
            <div class="is-button" data-id="{{this}}">
                {{this}}
            </div>
        {{/each}}
    </div>
</div>
<div class="tabs-content">

</div>