<h5 align="left">
    Item Associations
</h5>
<div class="assocations-header">
    <div class="list-association">
        <div class="association-info">
            <div class="association-type">
                Association Type
            </div>
            <div class="association-item">
                Associated Item
            </div>
        </div>
        <div class="association-delete">
            <span>

            </span>
        </div>
    </div>
</div>
<div class="associations-list is-list">
    {{#each associations}}
        {{#each metacards}}
            <div class="list-association" data-metacardId="{{id}}">
                <div class="association-info">
                    <div class="association-type">
                        {{../type}}
                    </div>
                    <div class="association-item" data-metacardId="{{id}}">
                        <span class="item-title">{{title}}</span>
                        <a class="item-link" href="#metacards/{{id}}">
                            {{title}}
                        </a>
                    </div>
                </div>
                <button class="association-delete is-negative" data-metacardId="{{id}}"
                        data-associationType="{{../type}}">
                    <span class="fa fa-trash-o">

                    </span>
                </button>
            </div>
        {{/each}}
    {{/each}}
</div>
<div class="associations-footer">
    <button class="associations-edit is-primary">
        <span class="fa fa-pencil">

        </span>
        <span>
            Edit
        </span>
    </button>
    <button class="associations-cancel is-negative">
        <span class="fa fa-times">

        </span>
        <span>
            Cancel
        </span>
    </button>
    <button class="associations-save is-positive">
        <span class="fa fa-floppy-o">

        </span>
        <span>
            Save
        </span>
    </button>
</div>
<div class="associations-editing">
    <h5 align="left">
        Add an Associations
    </h5>
    <div class="associations-add">
        <div class="add-type">
            <div class="type-label">
                Association Type
            </div>
            <select class="type-selection">
                <option value="derived">Derived</option>
                <option value="related">Related</option>
            </select>
        </div>
        <div class="add-select">
            <div class="select-label">
                Associated Item(s)
            </div>
            <select multiple class="select-selection">
                {{#each possibleAssociations}}
                    <option value="{{id}}">{{title}}</option>
                {{/each}}
            </select>
        </div>
    </div>
    <button class="associations-addNew is-primary">
        <span class="fa fa-plus">

        </span>
        <span>
            Create Association
        </span>
    </button>
</div>