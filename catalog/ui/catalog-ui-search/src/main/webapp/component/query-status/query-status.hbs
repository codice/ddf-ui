{{#if this}}
    <h5 align="center">Details</h5>
    <div class="details is-list">
        <div>Initiated on {{initiated}}</div>
    </div>
    <h5 align="center">Sources queried</h5>
    <div class="is-list">
    {{#each status}}
        <div class="status">
            <div class="status-source">{{id}}</div>
        <div class="status-result">
        {{state}}
        {{#unless pending}}
            <div class="status-time">({{elapsed}} ms)</div>
        {{/unless}}
        </div>
        </div>
    {{/each}}
    </div>
{{else}}
    <h5 align="center">Status unavailable</h5>
{{/if}}